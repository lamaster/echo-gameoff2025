{
  "name": "echo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "bun test",
    "lint:biome": "biome check src scripts",
    "fmt:biome": "biome format --write src scripts",
    "fmt:glsl": "prettier --plugin prettier-plugin-glsl --write \"src/shaders/**/*.glsl\"",
    "lint:glsl": "prettier --plugin prettier-plugin-glsl --check \"src/shaders/**/*.glsl\"",
    "validate:glsl": "node scripts/validate-shaders.mjs",
    "lint": "bun run lint:biome && bun run lint:glsl"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "prettier": "^3.7.3",
    "prettier-plugin-glsl": "^0.2.2",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
